{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDirs": [
      ".",
      "../src"
    ],
    "paths": {
      "barquo": [
        "../lib"
      ],
      "barquo/*": [
        "../lib/*"
      ]
    },
    "types": [
      "jasmine"
    ],
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "lib": [ "es6", "dom", "es2015.promise" ]
  }
}